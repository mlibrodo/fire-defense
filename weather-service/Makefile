# weather-service - Monorepo Component

.PHONY: build clean test dev help

# Default target
build: ## Build this component
	echo "Building weather-service..."
	echo "Build target not implemented yet for weather-service"

clean: ## Clean build artifacts
	echo "Cleaning weather-service..."
	echo "Clean target not implemented yet for weather-service"

test: ## Run tests
	echo "Testing weather-service..."
	echo "Test target not implemented yet for weather-service"

dev: ## Run in development mode
	echo "Starting dev mode for weather-service..."
	echo "Dev target not implemented yet for weather-service"

help: ## Show this help message
	@echo "weather-service - Available targets:"
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'
